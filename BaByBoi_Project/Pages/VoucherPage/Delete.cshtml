@page
@model BaByBoi_Project.Pages.VoucherPage.DeleteModel

@{
    Layout = "AdminLayout";
}

<h1>Xóa</h1>

<h3>Bạn có chắc chắn muốn xóa không?</h3>
<div>
    <h4>Voucher</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Voucher.VoucherCode)
        </dd>
        <dt class="col-sm-2">
            Ngày Bắt Đầu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Voucher.StartDate)
        </dd>
        <dt class="col-sm-2">
            Ngày Kết Thúc
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Voucher.EndDate)
        </dd>
        <dt class="col-sm-2">
            Loại
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Voucher.Type)
        </dd>
        <dt class="col-sm-2">
            Phần Trăm
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Voucher.Percent)
        </dd>
        <dt class="col-sm-2">
            Giá Trị
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Voucher.Value)
        </dd>
        <dt class="col-sm-2">
            Giá Trị Kích Hoạt
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Voucher.TriggerValue)
        </dd>
        <dt class="col-sm-2">
            Trạng Thái
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Voucher.Status)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Voucher.VoucherId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-page="./Index">Quay lại danh sách</a>
    </form>
</div>
