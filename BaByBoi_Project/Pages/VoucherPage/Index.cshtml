@page
@model BaByBoi_Project.Pages.VoucherPage.IndexModel

@{
    ViewData["Title"] = "Danh sách Voucher";
    Layout = "AdminLayout";
}

<h1>Danh sách Voucher</h1>

<p>
    <a asp-page="Create">Tạo Mới</a>
</p>
<table class="table">
    <thead>
        @if (Model.Voucher != null && Model.Voucher.Any())
        {
            <tr>
                <th>Mã</th>
                <th>Ngày Bắt Đầu</th>
                <th>Ngày Kết Thúc</th>
                <th>Loại</th>
                <th>Phần Trăm</th>
                <th>Giá Trị</th>
                <th>Giá Trị Kích Hoạt</th>
                <th>Trạng Thái</th>
                <th></th>
            </tr>
        }
    </thead>
    <tbody>
        @if (Model.Voucher != null)
        {
            @foreach (var item in Model.Voucher)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.VoucherCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Percent)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TriggerValue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.VoucherId">Chỉnh sửa</a> |
                        <a asp-page="./Details" asp-route-id="@item.VoucherId">Chi tiết</a> |
                        <a asp-page="./Delete" asp-route-id="@item.VoucherId">Xóa</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<div>
    Trang @(Model.Voucher.PageIndex) của @(Model.Voucher.TotalPages)
</div>
<div>
    @if (Model.Voucher.HasPreviousPage)
    {
        <a asp-page="./Index" asp-route-pageIndex="@(Model.Voucher.PageIndex - 1)">Trước</a>
    }
    @if (Model.Voucher.HasNextPage)
    {
        <a asp-page="./Index" asp-route-pageIndex="@(Model.Voucher.PageIndex + 1)">Tiếp</a>
    }
</div>
