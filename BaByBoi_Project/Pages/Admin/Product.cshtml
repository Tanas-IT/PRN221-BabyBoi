                                    <form asp-page-handler="SearchProduct" method="post" style="margin: 0 auto; display: flex; align-self: baseline">
                                        <input class="form-control" style="
                                                    height: 40px;
                                                    border-radius: 10px;
                                                    width: 330px;
                                                    padding: 10px;" type="search" id="searchInput" asp-for="SearchValue" placeholder="Search" />
                                        <button style="border-radius: 8px; margin-left: 22px;" type="submit" class="btn btn-info">Search</button>
                                    </form>
                                    <form method="post" asp-page-handler="ResetProduct">
                                        <button style="border-radius: 8px; margin-left: 22px; color: white" type="submit" class="btn btn-warning">Reset Page</button>
                                    </form>
                                    </div>
                                    <button class="btn btn-primary btn-round ms-auto"
                                            data-bs-toggle="modal"
                                            data-bs-target="#addRowModal">
                                        <i class="fa fa-plus"></i>
                                        Thêm sản phẩm
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <!-- Modal -->
                                <div class="modal fade"
                                     id="addRowModal"
                                     tabindex="-1"
                                     role="dialog"
                                     aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <form method="post" asp-page-handler="AddProduct" enctype="multipart/form-data">
                                        <div class="modal-content">
                                            <div class="modal-header border-0">
                                                <h5 class="modal-title">
                                                    <span class="fw-mediumbold"> Thêm</span>
                                                    <span class="fw-light"> Sản Phẩm </span>
                                                </h5>
                                                <button type="button"
                                                        class="close"
                                                        data-bs-dismiss="modal"
                                                        aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            <div class="form-group form-group-default">
                                                                <label for="addProductCode">Mã sản phẩm</label>
                                                                <input id="addProductCode"
                                                                       type="text"
                                                                       class="form-control"
                                                                       asp-for="AddProduct.ProductCode"
                                                                       />
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="form-group form-group-default">
                                                                <label for="addProductName">Tên sản phẩm</label>
                                                                <input id="addProductName"
                                                                       type="text"
                                                                       class="form-control"
                                                                       asp-for="AddProduct.ProductName"
                                                                       />
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="form-group form-group-default">
                                                                <label for="addProductDescription">Mô tả sản phẩm</label>
                                                                <input id="addProductDescription"
                                                                       type="text"
                                                                       class="form-control"
                                                                       asp-for="AddProduct.Description"
                                                                      />
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="form-group">
                                                                <label for="addProductDescription">Trạng thái</label>
                                                                <br/>
                                                                <label for="activeProduct">Khả dụng</label>
                                                                <input id="activeProduct"
                                                                       type="radio"
                                                                       value="1"
                                                                       style="margin: 15px;"
                                                                           name="productStatus"
                                                                       />
                                                                <label for="bannedProduct">Hết hàng</label>
                                                                <input id="bannedProduct"
                                                                       type="radio"
                                                                       style="margin: 15px;"
                                                                       value="0"
                                                                       name="productStatus" />
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12" style="margin-left: 5px;">
                                                                <label for="idCategory">Danh mục</label>
                                                                    <select class="form-control mt-3 mb-4" id="idCategory" asp-for="AddProduct.CategoryId">
                                                                        @foreach(var category in Model.listCagetory)
                                                                        {
                                                                    <option value="@category.CategoryId">@category.CategoryName</option>
                                                                        }
                                                                    </select>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="form-group form-group-default">
                                                                <label for="addProductDescription">Khuyến mãi</label>
                                                                <input id="addProductDescription"
                                                                       type="number"
                                                                       class="form-control" 
                                                                       asp-for="AddProduct.Discount" />
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="form-group form-group-default">
                                                                <label for="addProductDescription" style="margin-bottom: 10px;">Kích cỡ</label>
                                                                    @foreach(var size in Model.listSize)
                                                                    {
                                                                       <div class="d-flex align-items-center mx-3">
                                                                        <label for="@size.SizeId">@size.SizeName</label>
                                                                        <input id="@size.SizeId"
                                                                               type="checkbox"
                                                                               value="@size.SizeId"
                                                                               style="margin: 15px;"
                                                                               name="SelectedSize" />
                                                                        </div>
                                                                    <div class="d-flex align-items-center mx-3 my-2">
                                                                        <label for="quantity-@size.SizeId">Số lượng</label>
                                                                        <input style="margin-left: 10px;" id="quantity-@size.SizeId" type="number" name="productAmount" />
                                                                    </div>
                                                                    <div class="d-flex align-items-center mx-3 my-2">
                                                                        <label for="price-@size.SizeId">Giá</label>
                                                                        <input placeholder="VND" min="10000" style="margin-left: 50px;" id="price-@size.SizeId" type="number" name="productPrice" />
                                                                    </div>
                                                                    }
                                                                </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="form-group form-group-default upload__box">
                                                                    <label for="upload-image">Hình ảnh</label>
                                                                <input id="upload-image" type="file" accept="image/*" multiple data-max_length="20" class="upload__inputfile" name="ListImgURL">
                                                            <div class="upload__img-wrap"></div>
                                                             </div>
                                                        </div>
                                                    </div>
                                            </div>
                                            <div class="modal-footer border-0">
                                                <button type="submit"
                                                        id="addRowButton"
                                                        class="btn btn-primary">
                                                    Thêm
                                                </button>
                                                <button type="button"
                                                        class="btn btn-danger"
                                                        data-bs-dismiss="modal">
                                                    Đóng
                                                </button>
                                            </div>
                                        </div>
                                        </form>
                                    </div>
                                </div>

                                <div class="table-responsive">
                                    <table id="add-row"
                                           class="display table table-striped table-hover">
