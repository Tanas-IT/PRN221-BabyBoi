                                            <tr>
                                                <th>STT</th>
                                                <th>Mã sản phẩm</th>
                                                <th>Tên sản phẩm</th>
                                                <th>Ngày tạo</th>
                                                <th>Hình ảnh</th>
                                                <th>Mô tả</th>
                                                <th>Trạng thái</th>
                                                <th>Danh mục</th>
                                                <th>Khuyến mãi</th>
                                                <th style="width: 10%">Sửa & xóa</th>
                                            </tr>
                                        </thead>
