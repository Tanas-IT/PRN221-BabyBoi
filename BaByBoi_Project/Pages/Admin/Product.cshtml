                                                @foreach(var product in Model.ListProductPagin)
                                                {
                                                <tr>
                                                    <td>@product.ProductId</td>
                                                    <td>@product.ProductCode</td>
                                                    <td>@product.ProductName</td>
                                                    <td>@product.CreateDate?.ToString("dd-MM-yyyy")</td>
                                                    <td class="image-row">
                                                            @if (product.ProductImages.Count > 0)
                                                            {
                                                            <div class="product-image">
                                                                <img src="@product.ProductImages.First().ImageUrl"
                                                                     alt="@product.ProductImages.First().ImageName"
                                                                     class="avatar-img rounded-circle" />
                                                                <div class="overlay">
                                                                    <span class="preview">Preview</span>
                                                                </div>
                                                            </div>
                                                            <div class="product-popup">
                                                                <div class="popup-content">
                                                                    <img src="@product.ProductImages.First().ImageUrl" alt="@product.ProductImages.First().ImageName">
                                                                </div>
                                                            </div>
                                                            }
                                                            @if (product.ProductImages.Count == 0)
                                                            {
                                                            <div class="product-image">
                                                                <img src="https://firebasestorage.googleapis.com/v0/b/babyboi-d872c.appspot.com/o/product%2Fdefault-product-image.png?alt=media&token=76492637-3b09-4a43-8d7e-6426fe976faf"
                                                                     alt="Default Product Image"
                                                                     class="avatar-img rounded-circle" />
                                                                <div class="overlay">
                                                                    <span class="preview">Preview</span>
                                                                </div>
                                                            </div>
                                                            <div class="product-popup">
                                                                <div class="popup-content">
                                                                    <img src="https://firebasestorage.googleapis.com/v0/b/babyboi-d872c.appspot.com/o/product%2Fdefault-product-image.png?alt=media&token=76492637-3b09-4a43-8d7e-6426fe976faf" alt="Default Product Image">
                                                                </div>
                                                            </div>
                                                            }
                                                    </td>
                                                    <td>@product.Description</td>
                                                        @if(product.Status == 1)
                                                        {
                                                            <td>
                                                            <span style="display: block;
                                                                border: 1px solid;
                                                                padding: 5px;
                                                                border-radius: 8px;
                                                                background-color: #31ce36;
                                                                font-weight: bold;
                                                                text-align: center;
                                                                color: white;">Khả dụng</span>
                                                            </td>
                                                        } else
                                                        {
                                                        <td>
                                                            <span style="display: block;
                                                                border: 1px solid;
                                                                padding: 5px;
                                                                border-radius: 8px;
                                                                background-color: red;
                                                                font-weight: bold;
                                                                text-align: center;
                                                                color: white;">Hết hàng</span>
                                                        </td>
                                                        }
                                                        <td>@product.Category.CategoryName</td>
                                                    <td>@product.Discount</td>
                                                    <td>
                                                        <div class="form-button-action">
                                                   
                                                            <button type="button"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#updateModal_@product.ProductId"
                                                                    title=""
                                                                    class="btn btn-link btn-primary btn-lg"
                                                                    data-original-title="Edit Product">
                                                                <i class="fa fa-edit"></i>
                                                            </button>
