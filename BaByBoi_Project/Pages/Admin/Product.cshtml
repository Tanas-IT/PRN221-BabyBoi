    Layout = "";
    string message = ViewData["Message"] as string;
    string errorMessage = ViewData["ErrorMessage"] as string;
    User user = null!;
    if (HttpContextAccessor.HttpContext != null)
    {
        user = HttpContextAccessor.HttpContext.Session.GetObjectFromJson<User>("User");
