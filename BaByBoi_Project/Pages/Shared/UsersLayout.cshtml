@using BaByBoi.Domain.Models
@using BaByBoi_Project.Extensions
@inject IHttpContextAccessor HttpContextAccessor

@{
    User user = null!;
    if (HttpContextAccessor.HttpContext != null)
    {
        user = HttpContextAccessor.HttpContext.Session.GetObjectFromJson<User>("User");
    }
    var currentPath = HttpContextAccessor.HttpContext?.Request.Path;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BaByBoi Store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BaByBoi_Project.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMS7GCCq9gE4C5Fdvv5ciy5Zg1v5vREnF6R4+5b" crossorigin="anonymous">
    <style>
        header {
            margin-bottom: 100px;
        }

        .list-group {
            max-width: 200px;
            position: fixed;
            left: 0;
            top: 150px;
            z-index: 1000;
            margin-left: 100px;
        }

        .list-group-item {
            cursor: pointer;
        }

            .list-group-item:hover {
                font-weight: bold;
                text-decoration: underline;
            }

        .category {
            margin-top: 150px;
            margin-left: 320px;
            padding-left: 20px;
        }

        footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #f8f9fa;
            padding: 10px 0;
            text-align: center;
            z-index: 10;
        }

        .cart-icon {
            margin-right: 5px;
        }
    </style>
</head>
<body>
    <header class="p-3 container-fluid text-white" style="background-color: #21409A">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <img src="~/image/babiboi.png" class="bi me-2" width="40" height="32" alt="BaByBoi">
                </a>
                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a href="#" class="nav-link px-2 text-white">Trang chủ</a></li>
                    <li><a href="#" class="nav-link px-2 text-white">Sản phẩm</a></li>
                    <li><a href="#" class="nav-link px-2 text-white">Chính sách</a></li>
                    <li><a href="#" class="nav-link px-2 text-white">Giới thiệu</a></li>
                </ul>
                <form class="col-12 col-sm-10 col-lg-auto mb-3 mb-lg-0 me-lg-3">
                    <input type="search" name="searchValue" class="form-control form-control-dark" placeholder="Search..." aria-label="Search">
                </form>
                <div class="text-end m-3">
                    <a href="/CustomerViewPage/ShoppingCart" class="btn btn-outline-light">
                        <i class="fas fa-shopping-cart cart-icon"></i>Giỏ hàng
                    </a>
                </div>
                @if (user != null)
                {
                    <div class="dropdown">
                        <button class="btn btn-outline-light dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            @user.FullName
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" asp-page="/Profile/Index">Hồ sơ</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form method="post" asp-page="/LoginPage/Index" asp-page-handler="Logout" asp-route-returnUrl="/">
                                    <button type="submit" class="dropdown-item">Đăng xuất</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <a href="/LoginPage" class="btn btn-outline-light me-2">Đăng nhập</a>
                    <a href="/RegisterPage" class="btn btn-warning">Đăng ký</a>
                }

            </div>
        </div>
    </header>

    @RenderBody()

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - BaByBoi Store - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/d98e41de81.js" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
