 @page
@model BaByBoi_Project.Pages.AdminPage.DetailsModel

@{
    Layout = "AdminLayout";
}
<div class="index-page">
    <div style="margin-left: 50px">
        <h4>Chi tiết tài khoản</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.Email)
            </dt>
            <dd class="col-sm-10">
                @(Model.User.Email ?? "N/A")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.Password)
            </dt>
            <dd class="col-sm-10">
                @(Model.User.Password ?? "N/A")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.Phone)
            </dt>
            <dd class="col-sm-10">
                @(Model.User.Phone ?? "N/A")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.FullName)
            </dt>
            <dd class="col-sm-10">
                @(Model.User.FullName ?? "N/A")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.CreateDate)
            </dt>
            <dd class="col-sm-10">
                @(Model.User.CreateDate != null ? Model.User.CreateDate.Value.ToString("yyyy-MM-dd") : "N/A")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.UpdateDate)
            </dt>
            <dd class="col-sm-10">
                @(Model.User.UpdateDate != null ? Model.User.UpdateDate.Value.ToString("yyyy-MM-dd") : "N/A")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Status)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.BirthDate)
            </dt>
            <dd class="col-sm-10">
                @(Model.User.BirthDate != null ? Model.User.BirthDate.Value.ToString("yyyy-MM-dd") : "N/A")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.Gender)
            </dt>
            <dd class="col-sm-10">
                @(Model.User.Gender == 1 ? "Nam" : (Model.User.Gender == 2 ? "Nữ" : "N/A"))
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.Role)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Role.RoleName)
            </dd>
        </dl>
        @* <div>
        <a asp-page="./Edit" asp-route-id="@Model.User?.UserId">Edit</a> |
        <a asp-page="./Index">Back to List</a>
        </div> *@
        <div>
            <button id="btnEdit" class="btn btn-primary">Edit</button>
            <button id="btnBack" class="btn btn-secondary">Back</button>
        </div>
    </div>
    <style>
        .index-page {
            padding-top: 100px; /* Điều chỉnh giá trị này để tạo khoảng trống */
        }
    </style>
    <script>
        document.getElementById('btnEdit').addEventListener('click', function () {
            var userId = @Model.User?.UserId;
            window.location.href = '/AdminPage/Edit?id=' + userId; // Điều chỉnh URL theo đúng routing của bạn
        });

        document.getElementById('btnBack').addEventListener('click', function () {
            window.location.href = '/AdminPage/Index'; // Điều chỉnh URL theo đúng routing của bạn
        });
    </script>
</div>