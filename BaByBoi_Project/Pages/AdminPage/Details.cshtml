 @page
@model BaByBoi_Project.Pages.AdminPage.DetailsModel

@{
    Layout = "AdminLayout";
}
<div class="index-page">
    <div style="margin-left: 50px">
        <h4>Chi tiết tài khoản</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @(Model.User.Email ?? "N/A")
            </dd>
            <dt class="col-sm-2">
                Mật khẩu
            </dt>
            <dd class="col-sm-10">
                @(Model.User.Password ?? "N/A")
            </dd>
            <dt class="col-sm-2">
                Số điện thoại
            </dt>
            <dd class="col-sm-10">
                @(Model.User.Phone ?? "N/A")
            </dd>
            <dt class="col-sm-2">
                Tên đầy đủ
            </dt>
            <dd class="col-sm-10">
                @(Model.User.FullName ?? "N/A")
            </dd>
            <dt class="col-sm-2">
                Ngày tạo
            </dt>
            <dd class="col-sm-10">
                @(Model.User.CreateDate != null ? Model.User.CreateDate.Value.ToString("yyyy-MM-dd") : "N/A")
            </dd>
            <dt class="col-sm-2">
                Ngày chỉnh sửa
            </dt>
            <dd class="col-sm-10">
                @(Model.User.UpdateDate != null ? Model.User.UpdateDate.Value.ToString("yyyy-MM-dd") : "N/A")
            </dd>
            <dt class="col-sm-2">
                Trạng thái
            </dt>
            <dd class="col-sm-10">
                @(Model.User.Status == 1 ? "Hoạt động" : (Model.User.Status == 2 ? "Bị xóa" : "Bị cấm"))
            </dd>
            <dt class="col-sm-2">
                Ngày sinh
            </dt>
            <dd class="col-sm-10">
                @(Model.User.BirthDate != null ? Model.User.BirthDate.Value.ToString("yyyy-MM-dd") : "N/A")
            </dd>
            <dt class="col-sm-2">
                Giới tính
            </dt>
            <dd class="col-sm-10">
                @(Model.User.Gender == 1 ? "Nam" : (Model.User.Gender == 2 ? "Nữ" : "N/A"))
            </dd>
            <dt class="col-sm-2">
                Vai trò
            </dt>
            <dd class="col-sm-10">
                @(Model.User?.RoleId == 1 ? "Quản trị viên" : (Model.User?.RoleId == 2 ? "Khách hàng" : "N/A"))
            </dd>
        </dl>
        @* <div>
        <a asp-page="./Edit" asp-route-id="@Model.User?.UserId">Edit</a> |
        <a asp-page="./Index">Back to List</a>
        </div> *@
        <div>
            <button id="btnEdit" class="btn btn-primary">Chỉnh sửa</button>
            <button id="btnBack" class="btn btn-secondary">Quay lại</button>
        </div>
    </div>
    <style>
        .index-page {
            padding-top: 100px; /* Điều chỉnh giá trị này để tạo khoảng trống */
        }
    </style>
    <script>
        document.getElementById('btnEdit').addEventListener('click', function () {
            var userId = @Model.User?.UserId;
            window.location.href = '/AdminPage/Edit?id=' + userId; // Điều chỉnh URL theo đúng routing của bạn
        });

        document.getElementById('btnBack').addEventListener('click', function () {
            window.location.href = '/AdminPage/Index'; // Điều chỉnh URL theo đúng routing của bạn
        });
    </script>
</div>