@page
@model BaByBoi_Project.Pages.LoginPage.IndexModel
@{
    Layout = "AuthenLayout";
    ViewData["Title"] = "Trang Đăng Nhập";
}

<head>
    <link rel="stylesheet" href="~/css/login.css">
</head>

<body>
    <div class="d-md-flex half">
        <div class="bg" style="background-image: url('@Url.Content("~/assets/loginBg.png")');"></div>
        <div class="contents">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-12">
                        <div class="form-block mx-auto">
                            <div class="text-center mb-5">
                                <h3 class="text-uppercase">Đăng Nhập</h3>
                            </div>
                            <form asp-page-handler="Login" method="post">
                                <div class="form-group first">
                                    <label for="Email">Email</label>
                                    <input type="text" name="email" class="form-control" placeholder="your-email@gmail.com" id="email">
                                </div>
                                <div class="form-group last mb-3">
                                    <label for="password">Mật khẩu</label>
                                    <input type="password" name="password" class="form-control" placeholder="Mật khẩu của bạn" id="password">
                                </div>
                                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                                {
                                    <div class="alert alert-danger">@Model.ErrorMessage</div>
                                }
                                <div class="d-sm-flex mb-5 align-items-center">
                                    <span class="ml-auto"><a href="#" class="forgot-pass">Quên mật khẩu</a></span>
                                </div>
                                <input type="submit" value="Đăng Nhập" class="btn btn-authen btn-block py-2 btn-primary">
                                <span class="text-center my-3 d-block">hoặc</span>
                                <div class="btnContainer">
                                    <a href="/LoginPage/Index?handler=GoogleLogin" class="btn btn-authen btn-block py-2 btn-google">
                                        <i class="fa-brands fa-google"></i>
                                        Đăng nhập với Google
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
