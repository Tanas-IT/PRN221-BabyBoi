@page
@model IndexModel

@{
    Layout = "AdminLayout";
}
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" />
<style>
    /* Product Card Styles */
    .product-card {
        position: relative;
        border: 1px solid #ccc;
        padding: 15px;
        text-align: center;
        background-color: #fff;
        transition: transform 0.3s;
    }

        .product-card:hover {
            transform: scale(1.05);
        }

    /* Product Image Styles */
    .product-image {
        position: relative;
    }

    /* Discount Banner Styles */
    .discount,
    .discount-banner {
        position: absolute;
        top: 0;
        left: 0;
        background-color: #dc3545;
        color: white;
        padding: 5px 10px;
        transform: translate(-50%, -50%) rotate(-45deg);
        z-index: 1;
    }

    /* Discount Label Styles */
    .discount-label {
        display: block;
        font-size: 14px;
        font-weight: bold;
    }

    /* Price Styles */
    .price {
        margin-top: 10px;
        font-size: 18px;
    }

    /* Original Price Styles */
    .original-price {
        text-decoration: line-through;
        color: #999;
    }

    /* Status Styles */
    .status {
        margin-top: 10px;
    }

    /* Button Primary Styles */
    .btn-primary {
        margin-top: 15px;
    }

    /* Additional Table Styles for Category Page */
    .table th,
    .table td {
        vertical-align: middle;
        text-align: center;
    }
</style>

<h1>Category</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].CategoryCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].UpdateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].UpdateBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].CreateBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].Status)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Category)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.CategoryId" class="btn btn-primary btn-sm">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.CategoryId" class="btn btn-info btn-sm">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.CategoryId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
