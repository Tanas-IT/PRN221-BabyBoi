@page
@model DeleteModel

@{
    Layout = "AdminLayout";
}

<div class="index-page">
    <h3>Xóa loại</h3>
    <div>
        <h4>Category</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category.CategoryCode)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.CategoryCode)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category.CategoryName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.CategoryName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category.CreateDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.CreateDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category.UpdateDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.UpdateDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category.UpdateBy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.UpdateBy)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category.CreateBy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.CreateBy)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.Status)
            </dd>
        </dl>

        <form method="post" onsubmit="return confirmDelete()">
            <input type="hidden" asp-for="Category.CategoryId" />
            <input type="submit" value="Xóa loại" class="btn btn-danger" />
        </form>
    </div>
    <button style="margin-top: 5px" id="btnBack" class="btn btn-secondary">Quay lại</button>
    <script>
        document.getElementById('btnBack').addEventListener('click', function () {
            window.location.href = '/AdminPage/Index'; // Điều chỉnh URL theo đúng routing của bạn
        });

        function confirmDelete() {
            return confirm('Bạn có chắc chắn muốn xóa loại này không?'); // Hộp thoại xác nhận
        }
    </script>
    <style>
        .index-page {
            margin-left: 40px;
            padding-top: 100px; /* Điều chỉnh giá trị này để tạo khoảng trống */
        }
    </style>
</div>
